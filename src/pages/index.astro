---
import "../styles/global.css";
import { company, nav, megaMenuData, solutions, products, advantages, delivery, faqs, contact, stats } from "../data/site";

---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={`${company.name}｜${company.tagline}。以工业数据采集为底座，贯通MES生产执行主线，协同ERP运营管理，助力制造企业数字化转型。`} />
    <meta name="keywords" content="工业数据采集,MES系统,ERP系统,物联网平台,智能制造,工业4.0,数字化转型,格物数衍" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{company.short}｜{company.tagline}</title>
  </head>

  <body class="min-h-screen bg-navy-950 text-gray-100 antialiased">
    <!-- Global Abstract Background Layer -->
    <div class="fixed inset-0 -z-10 overflow-hidden pointer-events-none">
      <!-- Base gradient -->
      <div class="absolute inset-0 bg-gradient-to-br from-navy-950 via-navy-900 to-navy-950"></div>
      <!-- Top-left glow -->
      <div class="absolute -top-40 -left-40 h-[600px] w-[600px] rounded-full bg-electric-600/8 blur-[120px]"></div>
      <!-- Bottom-right glow -->
      <div class="absolute -bottom-40 -right-40 h-[500px] w-[500px] rounded-full bg-cyan-500/6 blur-[100px]"></div>
      <!-- Center accent -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 h-[800px] w-[800px] rounded-full bg-electric-500/4 blur-[150px]"></div>
      <!-- Subtle noise texture overlay -->
      <div class="absolute inset-0 opacity-[0.015]" style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%220 0 256 256%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cfilter id=%22noise%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.8%22 numOctaves=%224%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23noise)%22/%3E%3C/svg%3E');"></div>
      <!-- Grid pattern -->
      <div class="absolute inset-0 grid-pattern opacity-30"></div>
    </div>

    <!-- Mobile menu overlay -->
    <div id="mobile-menu" class="fixed inset-0 z-50 hidden">
      <div class="absolute inset-0 bg-navy-950/98 backdrop-blur-md" onclick="closeMobileMenu()"></div>
      <nav class="relative flex h-full flex-col px-6 pt-20 pb-8 overflow-y-auto">
        <!-- Close button -->
        <button class="absolute right-5 top-5 p-2 text-gray-400 hover:text-white" onclick="closeMobileMenu()" aria-label="关闭菜单">
          <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <!-- Mobile nav items with collapsible sub-menus -->
        <div class="space-y-2">
          <!-- Products -->
          <div class="mobile-nav-group">
            <button class="mobile-nav-trigger flex w-full items-center justify-between py-3 text-lg font-semibold text-white" data-target="mobile-products">
              产品
              <svg class="h-5 w-5 transition-transform text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div id="mobile-products" class="mobile-nav-content hidden pl-4 pb-3 space-y-3">
              {megaMenuData.products.items.map((item) => (
                <a href={item.href} class="block py-2 text-gray-300 hover:text-white" onclick="closeMobileMenu()">
                  <div class="font-medium">{item.name}</div>
                  <div class="text-sm text-gray-500">{item.desc}</div>
                </a>
              ))}
            </div>
          </div>

          <!-- Solutions -->
          <div class="mobile-nav-group">
            <button class="mobile-nav-trigger flex w-full items-center justify-between py-3 text-lg font-semibold text-white" data-target="mobile-solutions">
              解决方案
              <svg class="h-5 w-5 transition-transform text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div id="mobile-solutions" class="mobile-nav-content hidden pl-4 pb-3 space-y-3">
              {megaMenuData.solutions.items.map((item) => (
                <a href={item.href} class="block py-2 text-gray-300 hover:text-white" onclick="closeMobileMenu()">
                  <div class="font-medium">{item.name}</div>
                  <div class="text-sm text-gray-500">{item.desc}</div>
                </a>
              ))}
            </div>
          </div>

          <!-- Delivery -->
          <div class="mobile-nav-group">
            <button class="mobile-nav-trigger flex w-full items-center justify-between py-3 text-lg font-semibold text-white" data-target="mobile-delivery">
              交付
              <svg class="h-5 w-5 transition-transform text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <div id="mobile-delivery" class="mobile-nav-content hidden pl-4 pb-3 space-y-3">
              {megaMenuData.delivery.items.map((item) => (
                <a href="#delivery" class="block py-2 text-gray-300 hover:text-white" onclick="closeMobileMenu()">
                  <div class="font-medium">{item.name}</div>
                  <div class="text-sm text-gray-500">{item.desc}</div>
                </a>
              ))}
            </div>
          </div>

          <!-- Simple links -->
          <a href="#advantages" class="block py-3 text-lg font-semibold text-white hover:text-electric-400" onclick="closeMobileMenu()">优势</a>
          <a href="#about" class="block py-3 text-lg font-semibold text-white hover:text-electric-400" onclick="closeMobileMenu()">关于</a>
          <a href="#contact" class="block py-3 text-lg font-semibold text-white hover:text-electric-400" onclick="closeMobileMenu()">联系我们</a>
        </div>

        <a href="#contact" class="mt-8 block rounded-xl bg-electric-500 px-6 py-3.5 text-center font-semibold text-white hover:bg-electric-400" onclick="closeMobileMenu()">
          预约沟通
        </a>
      </nav>
    </div>

    <!-- Header with Mega Menu -->
    <header id="site-header" class="fixed top-0 left-0 right-0 z-40 border-b border-white/5 bg-navy-950/70 backdrop-blur-xl transition-all duration-300">
      <div class="mx-auto flex max-w-7xl items-center justify-between px-4 py-3 sm:px-6 lg:px-8">
        <!-- Logo -->
        <a href="#" class="flex items-center gap-3 group">
          <img src="/logo.png" alt="格物 Logo" class="h-10 rounded-xl shadow-lg shadow-electric-500/20 transition-transform group-hover:scale-105" />
          <div class="leading-tight">
            <div class="text-base font-bold tracking-wide text-white">{company.short}</div>
            <div class="text-xs text-gray-400 hidden sm:block">{company.tagline}</div>
          </div>
        </a>

        <!-- Desktop Mega Menu Navigation -->
        <nav class="hidden lg:flex items-center gap-1">
          <!-- Products dropdown -->
          <div class="mega-menu-item relative group">
            <a href="#products" class="nav-link flex items-center gap-1 px-4 py-2 text-sm font-medium text-gray-300 hover:text-white rounded-lg hover:bg-white/5 transition-all" data-section="products">
              产品
              <svg class="h-4 w-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </a>
            <!-- Mega dropdown panel -->
            <div class="mega-panel absolute top-full left-1/2 -translate-x-1/2 pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="w-[540px] rounded-2xl border border-white/10 bg-navy-900/95 backdrop-blur-xl shadow-2xl shadow-black/50 p-6">
                <div class="grid grid-cols-2 gap-6">
                  <div>
                    <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">{megaMenuData.products.title}</h4>
                    <div class="space-y-3">
                      {megaMenuData.products.items.map((item) => (
                        <a href={item.href} class="flex items-start gap-3 p-3 rounded-xl hover:bg-white/5 transition-colors">
                          <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-electric-500/10 text-electric-400">
                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={item.icon} />
                            </svg>
                          </div>
                          <div>
                            <div class="font-semibold text-white">{item.name}</div>
                            <div class="text-sm text-gray-400">{item.desc}</div>
                          </div>
                        </a>
                      ))}
                    </div>
                  </div>
                  <div class="border-l border-white/10 pl-6">
                    <div class="rounded-xl bg-gradient-to-br from-electric-600/20 to-cyan-500/10 p-5">
                      <h5 class="font-semibold text-white mb-2">{megaMenuData.products.featured.title}</h5>
                      <p class="text-sm text-gray-400 mb-4">{megaMenuData.products.featured.desc}</p>
                      <a href={megaMenuData.products.featured.href} class="inline-flex items-center gap-1 text-sm font-medium text-electric-400 hover:text-electric-300">
                        了解更多
                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Solutions dropdown -->
          <div class="mega-menu-item relative group">
            <a href="#solutions" class="nav-link flex items-center gap-1 px-4 py-2 text-sm font-medium text-gray-300 hover:text-white rounded-lg hover:bg-white/5 transition-all" data-section="solutions">
              解决方案
              <svg class="h-4 w-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </a>
            <div class="mega-panel absolute top-full left-1/2 -translate-x-1/2 pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="w-[480px] rounded-2xl border border-white/10 bg-navy-900/95 backdrop-blur-xl shadow-2xl shadow-black/50 p-6">
                <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">{megaMenuData.solutions.title}</h4>
                <div class="space-y-2">
                  {megaMenuData.solutions.items.map((item) => (
                    <a href={item.href} class="flex items-center gap-4 p-3 rounded-xl hover:bg-white/5 transition-colors">
                      <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-cyan-500/10 text-cyan-400">
                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={item.icon} />
                        </svg>
                      </div>
                      <div>
                        <div class="font-semibold text-white">{item.name}</div>
                        <div class="text-sm text-gray-400">{item.desc}</div>
                      </div>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          </div>

          <!-- Delivery dropdown -->
          <div class="mega-menu-item relative group">
            <a href="#delivery" class="nav-link flex items-center gap-1 px-4 py-2 text-sm font-medium text-gray-300 hover:text-white rounded-lg hover:bg-white/5 transition-all" data-section="delivery">
              交付
              <svg class="h-4 w-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </a>
            <div class="mega-panel absolute top-full left-1/2 -translate-x-1/2 pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="w-[360px] rounded-2xl border border-white/10 bg-navy-900/95 backdrop-blur-xl shadow-2xl shadow-black/50 p-6">
                <h4 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">{megaMenuData.delivery.title}</h4>
                <div class="space-y-2">
                  {megaMenuData.delivery.items.map((item, i) => (
                    <a href="#delivery" class="flex items-center gap-4 p-3 rounded-xl hover:bg-white/5 transition-colors">
                      <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-lg bg-electric-600 text-white text-sm font-bold">
                        {String(i + 1).padStart(2, '0')}
                      </div>
                      <div>
                        <div class="font-semibold text-white">{item.name}</div>
                        <div class="text-sm text-gray-400">{item.desc}</div>
                      </div>
                    </a>
                  ))}
                </div>
              </div>
            </div>
          </div>

          <!-- Simple nav links -->
          <a href="#advantages" class="nav-link px-4 py-2 text-sm font-medium text-gray-300 hover:text-white rounded-lg hover:bg-white/5 transition-all" data-section="advantages">优势</a>
          <a href="#about" class="nav-link px-4 py-2 text-sm font-medium text-gray-300 hover:text-white rounded-lg hover:bg-white/5 transition-all" data-section="about">关于</a>
          <a href="#contact" class="nav-link px-4 py-2 text-sm font-medium text-gray-300 hover:text-white rounded-lg hover:bg-white/5 transition-all" data-section="contact">联系我们</a>
        </nav>

        <div class="flex items-center gap-4">
          <a href="#contact" class="hidden rounded-xl bg-electric-500 px-5 py-2.5 text-sm font-semibold text-white shadow-lg shadow-electric-500/25 transition-all hover:bg-electric-400 hover:shadow-electric-400/30 sm:block">
            预约沟通
          </a>
          <button class="lg:hidden p-2 text-gray-300 hover:text-white hover:bg-white/5 rounded-lg transition-colors" onclick="openMobileMenu()" aria-label="打开菜单">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </header>

    <!-- Spacer for fixed header -->
    <div class="h-16"></div>

    <!-- Hero -->
    <section class="relative overflow-hidden">
      <!-- Background effects -->
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_50%_-20%,rgba(37,99,235,0.3),transparent)]"></div>
      <div class="absolute top-1/4 left-1/4 h-96 w-96 rounded-full bg-electric-500/20 blur-3xl animate-float"></div>
      <div class="absolute bottom-1/4 right-1/4 h-80 w-80 rounded-full bg-cyan-500/15 blur-3xl animate-float" style="animation-delay: -3s;"></div>

      <div class="relative mx-auto max-w-7xl px-4 py-20 sm:px-6 sm:py-28 lg:px-8 lg:py-36">
        <div class="grid gap-12 lg:grid-cols-2 lg:gap-16 items-center">
          <div class="animate-fade-in-up">
            <div class="inline-flex items-center gap-2 rounded-full border border-electric-500/30 bg-electric-500/10 px-4 py-1.5 text-sm text-electric-300 mb-6">
              <span class="h-2 w-2 rounded-full bg-cyan-400 animate-pulse"></span>
              专注工业数字化转型
            </div>

            <h1 class="text-4xl font-bold leading-tight text-white sm:text-5xl lg:text-6xl">
              <span class="bg-gradient-to-r from-white via-electric-300 to-cyan-400 bg-clip-text text-transparent">{company.slogan}</span>
            </h1>

            <p class="mt-6 text-lg leading-relaxed text-gray-300 sm:text-xl">
              以<strong class="text-white">工业数据采集</strong>为底座，贯通<strong class="text-white">MES生产执行</strong>主线，
              协同<strong class="text-white">ERP运营管理</strong>辅线，帮助制造企业实现设备互联、过程透明与全程可追溯。
            </p>

            <div class="mt-8 flex flex-wrap gap-4">
              <a href="#products" class="group inline-flex items-center gap-2 rounded-xl bg-electric-500 px-6 py-3 text-base font-semibold text-white shadow-lg shadow-electric-500/25 transition-all hover:bg-electric-400 hover:shadow-electric-400/30">
                了解核心产品
                <svg class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
              <a href="#solutions" class="inline-flex items-center gap-2 rounded-xl border border-white/20 bg-white/5 px-6 py-3 text-base font-semibold text-white backdrop-blur transition-all hover:bg-white/10">
                查看解决方案
              </a>
            </div>

            <!-- Stats -->
            <div class="mt-12 grid grid-cols-3 gap-6 border-t border-white/10 pt-8">
              {stats.map((stat) => (
                <div>
                  <div class="text-2xl font-bold text-white sm:text-3xl">{stat.value}</div>
                  <div class="mt-1 text-sm text-gray-400">{stat.label}</div>
                </div>
              ))}
            </div>
          </div>

          <!-- Architecture diagram -->
          <div class="relative animate-fade-in-up" style="animation-delay: 0.2s;">
            <div class="rounded-2xl border border-white/10 bg-white/5 p-6 shadow-2xl shadow-electric-500/10 backdrop-blur-sm">
              <div class="flex items-center gap-3 mb-6">
                <div class="h-3 w-3 rounded-full bg-red-500"></div>
                <div class="h-3 w-3 rounded-full bg-yellow-500"></div>
                <div class="h-3 w-3 rounded-full bg-green-500"></div>
                <span class="ml-2 text-sm font-medium text-gray-400">系统架构概览</span>
              </div>

              <div class="space-y-4">
                <div class="rounded-xl border border-electric-500/30 bg-navy-900/50 p-4 transition-all hover:border-electric-500/50">
                  <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-electric-500/20">
                      <svg class="h-5 w-5 text-electric-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-semibold text-white">设备层</div>
                      <div class="text-sm text-gray-400">PLC · 传感器 · 智能网关</div>
                    </div>
                  </div>
                </div>

                <div class="flex justify-center">
                  <svg class="h-6 w-6 text-electric-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                  </svg>
                </div>

                <div class="rounded-xl border border-cyan-500/30 bg-cyan-500/10 p-4 transition-all hover:border-cyan-500/50">
                  <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-cyan-500/20">
                      <svg class="h-5 w-5 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-semibold text-white">数据采集层（Hive）</div>
                      <div class="text-sm text-gray-400">EMQX · NATS · TDengine</div>
                    </div>
                  </div>
                </div>

                <div class="flex justify-center">
                  <svg class="h-6 w-6 text-electric-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                  </svg>
                </div>

                <div class="rounded-xl border border-electric-500/30 bg-navy-900/50 p-4 transition-all hover:border-electric-500/50">
                  <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-electric-500/20">
                      <svg class="h-5 w-5 text-electric-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-semibold text-white">业务层（Gearjob）</div>
                      <div class="text-sm text-gray-400">MES主线 · ERP辅线</div>
                    </div>
                  </div>
                </div>

                <div class="flex justify-center">
                  <svg class="h-6 w-6 text-electric-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                  </svg>
                </div>

                <div class="rounded-xl border border-white/10 bg-white/5 p-4 transition-all hover:border-white/20">
                  <div class="flex items-center gap-3">
                    <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-white/10">
                      <svg class="h-5 w-5 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <div>
                      <div class="font-semibold text-white">展示层</div>
                      <div class="text-sm text-gray-400">看板 · 报表 · 移动端</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

