---
import { products } from "../data/site";
---

<section id="products" class="py-24 bg-gray-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">核心产品</h2>
      <p class="mt-4 text-lg text-gray-600">
        经过生产环境验证的产品化组件，支持快速部署与持续迭代
      </p>
    </div>

    <div class="grid gap-8 lg:grid-cols-2">
      {products.map((p) => (
        <div class="group relative flex flex-col overflow-hidden rounded-2xl bg-white shadow-sm ring-1 ring-gray-200 transition-all hover:shadow-lg">
          <div class="p-8 sm:p-10">
            <div class="flex items-start justify-between gap-4 mb-8">
              <div class="flex items-center gap-4">
                <div class={`h-14 w-14 rounded-xl flex items-center justify-center text-white text-2xl font-bold shadow-md bg-gradient-to-br ${p.name === 'Hive' ? 'from-blue-600 to-cyan-500' : 'from-teal-500 to-emerald-500'}`}>
                  {p.name[0]}
                </div>
                <div>
                  <h3 class="text-2xl font-bold text-gray-900">{p.name}</h3>
                  <p class="text-sm text-gray-500">{p.subtitle}</p>
                </div>
              </div>
              <span class="rounded-full bg-blue-50 px-3 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-600/20">
                交付服务
              </span>
            </div>

            <p class="text-base font-semibold text-gray-900 mb-2">{p.tagline}</p>
            <p class="text-gray-600 leading-relaxed mb-8">{p.desc}</p>

            <div class="space-y-4">
              {p.highlights.map((h) => (
                <div class="flex gap-4 rounded-xl bg-gray-50 p-4 transition-colors group-hover:bg-blue-50/50">
                  <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-lg bg-white text-blue-600 shadow-sm ring-1 ring-gray-200">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={h.icon} />
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold text-gray-900">{h.title}</div>
                    <div class="text-sm text-gray-500">{h.desc}</div>
                  </div>
                </div>
              ))}
            </div>

            <div class="mt-8 flex flex-wrap gap-2 pt-8 border-t border-gray-100">
              {p.tech.map((t) => (
                <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                  {t}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
